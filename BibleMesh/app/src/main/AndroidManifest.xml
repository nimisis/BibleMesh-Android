<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.readium.sdk.android.biblemesh"
    android:versionCode="1"
    android:versionName="0.1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- android:debuggable="true" -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.readium.sdk.android.biblemesh.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.ContainerList"
            android:label="@string/container_list_title">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.BookDataActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:parentActivityName="org.readium.sdk.android.biblemesh.ContainerList">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.MetaDataActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.biblemesh.BookDataActivity">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.SpineItemsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.biblemesh.BookDataActivity">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.ListOfFiguresActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.biblemesh.BookDataActivity">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.ListOfIllustrationsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.biblemesh.BookDataActivity">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.ListOfTablesActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.biblemesh.BookDataActivity">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.PageListActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.biblemesh.BookDataActivity">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.TableOfContentsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.biblemesh.BookDataActivity">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.BookmarksActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.readium.sdk.android.biblemesh.BookDataActivity">
        </activity>
        <activity
            android:name="org.readium.sdk.android.biblemesh.WebViewActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation|screenSize">
        </activity>
        <receiver android:name=".ConnectivityReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
